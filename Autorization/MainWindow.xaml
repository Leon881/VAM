<Window x:Class="Autorization_form.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Autorization_form"
        mc:Ignorable="d"
       Title="Авторизация" Height="450" Width="350" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <Label Content="Вход" FontSize="25" HorizontalAlignment="Center"/>
        <Label Content="Логин" FontSize="15" HorizontalAlignment="Center"/>
        <TextBox Name="Username" FontSize="20" Margin="20 5" KeyUp="Username_KeyUp"/>
        <Label Content="Пароль" FontSize="15" HorizontalAlignment="Center"/>
        <PasswordBox Name="Password" FontSize="20" Margin="20 5" KeyUp="Password_KeyUp"/>
        <Button Content="Войти" FontSize="20px" Width="150px" Margin="0 5px" Click="LognIn_Click"/>
        <Button FontSize="20px" Content="Еще не зарегистрированы?" Click="RegButton_Click"/>
    </StackPanel>
</Window>
